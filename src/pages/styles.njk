      <a href="#" role="button" class="c-button c-button--tertiary c-button--small">Tertiary Button Small</a>      
    </section>

    <section>
      <h2>Forms</h2>
      <form>
        <label for="text">Text Input</label>
        <input type="text" id="text" placeholder="Enter text" />

        <label for="email">Email</label>
        <input type="email" id="email" placeholder="you@example.com" />

        <label for="password">Password</label>
        <input type="password" id="password" />

        <label for="select">Select</label>
        <select id="select">
          <option>Option 1</option>
          <option>Option 2</option>
        </select>

        <fieldset>
          <legend>Radio Buttons</legend>
          <label><input type="radio" name="radio" checked /> Option A</label>
          <label><input type="radio" name="radio" /> Option B</label>
        </fieldset>

        <fieldset>
          <legend>Checkboxes</legend>
          <label><input type="checkbox" /> Checkbox A</label>
          <label><input type="checkbox" checked /> Checkbox B</label>
        </fieldset>

        <label for="textarea">Textarea</label>
        <textarea id="textarea" rows="4" placeholder="Type something..."></textarea>

        <button type="submit">Submit</button>
      </form>
    </section>

    <section class="c-grid">
      <div class="col-xs-6 col-md-4">Item 1</div>
      <div class="col-xs-6 col-md-4">Item 2</div>
