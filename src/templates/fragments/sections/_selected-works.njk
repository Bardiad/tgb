<section id="projects" class="c-posts u-bg-color-misc-white u-padding-y-1000 u-padding-y-1500-@xl">
	<div class="o-container">
		<article class="c-banner c-banner--small c-banner--info u-margin-b-900">
			<h2 class="c-banner__heading heading-4 u-text-align-left-@lg">Not everything’s here yet, but it’s on the way.</h2>
			<p class="c-banner__description u-text-align-left-@lg">While I add more case studies, feel free to explore my 2015–2018 work on the <a href="old/">previous version of my site</a>.</p>
		</article>
		<h2 class="u-margin-b-900-@xl u-margin-b-600-@xs w-100">Selected works</h2>
		{% for post in data.POSTS %}
			<article class="c-post u-flex u-justify-content-center-@xs gap-200-@xs gap-800-@lg gap-1700-@xxl flex-wrap-@xs flex-nowrap-@lg {% if loop.last %} u-margin-b-1200{% endif %}">
				<div class="c-post__content w-100-@xs w-50-@lg w-40-@xxl">
					<p class="c-post__meta u-color-ash-800 u-margin-t-300-@xs u-margin-t-0-@xl">{{ post.year }}</p>				
					<h3 class="c-post__title subheading-1 u-margin-b-200">{{ post.headline }}</h3>
					<ul class="c-taglist u-margin-b-400">
						{%  for tag in post.tags %}
							<li class="c-taglist__tag">{{ tag }}</li>
						{% endfor %}
					</ul>
					<p class="c-post__description body-copy u-margin-b-600">{{ post.description }}</p>

					{% if post.comingSoon %}
						<p class="u-font-size-300 u-text-italic">Case study coming soon</p>
					{% else %}
						<a href="/case-studies/{{ post.slug }}.html" class="c-button c-button--secondary c-button--small c-button--fw-@xs c-button--ib-@lg">Read case study</a>
					{% endif %}						
				</div>

				{% if post.comingSoon %}
				<div class="c-post__cs-wrapper u-border-color-ash-200 u-block w-100-@xs w-50-@lg w-60-@xxl flex-order-first-@xs flex-order-0-@lg">
					<img src="{{ post.thumbnail }}" alt="thumbnail for {{ post.headinline }}" class="o-fluid-img c-post__thumbnail"/>
					<div class="c-post__thumbnail-overlay"></div>
					<p class="c-post__cs-label">Coming soon</p>
				</div>
				{% else %}
				<a href="/case-studies/{{ post.slug }}.html" class="u-block w-100-@xs w-50-@lg w-60-@xxl c-post__thumbnail-link flex-order-first-@xs flex-order-0-@lg u-border-color-ash-200" style="--thumbHover: {{ post.theme }}">
					<img src="{{ post.thumbnail }}" alt="thumbnail for {{ post.headinline }}" width="850" height="552" class="o-fluid-img c-post__thumbnail"/>
				</a>
				{% endif %}				
			</article>
		{% endfor %}




	</div>
</section>